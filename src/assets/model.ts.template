import {Column, Entity, PrimaryColumn} from 'typeorm';

@Entity('{{table}}'{{#if schema}}, {
    schema: '{{schema}}'
}{{/if}})
export class {{modelName}} {
    @PrimaryColumn({
        name: '{{idproperty}}',
    })
    ['{{idproperty}}']: string;

    {{#each modelField}}
    @Column({
        name: '{{column}}',
        nullable: {{#if required}}false{{else}}true{{/if}},
    })
    ['{{columnOrigin}}']{{#unless required}}?{{/unless}}: {{dataType}};

    {{/each}}
}
